<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_toolbar" />

    <com.atguigu.biliapk.view.SpringScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="播放" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/layout_about_me"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/card_view_background"
                    android:foreground="?attr/selectableItemBackground">


                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="清晰度选择"
                        android:textColor="@color/font_normal"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/tv1"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="自动选择：根据机型智能适配"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg" />


                <RelativeLayout
                    android:id="@+id/layout_about_app1"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/card_view_background"
                    android:foreground="?attr/selectableItemBackground">


                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="播放完毕后动作"
                        android:textColor="@color/font_normal"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/tv2"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="自动换p：自动播放下一p视频"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg" />

                <RelativeLayout
                    android:id="@+id/layout_about_app2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/card_view_background"
                    android:foreground="?attr/selectableItemBackground">


                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="选择小窗播放尺寸"
                        android:textColor="@color/font_normal"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/tv3"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="默认"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="高级" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/layout_about_me1"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/card_view_background"
                    android:foreground="?attr/selectableItemBackground">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="解码设置"
                        android:textColor="@color/font_normal"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg" />


                <RelativeLayout
                    android:id="@+id/layout_about_app3"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/card_view_background"
                    android:foreground="?attr/selectableItemBackground">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="弹幕设置"
                        android:textColor="@color/font_normal"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg" />

                <RelativeLayout
                    android:id="@+id/layout_about_app4"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/card_view_background"
                    android:foreground="?attr/selectableItemBackground">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="离线设置"
                        android:textColor="@color/font_normal"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="其他" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/layout_about_me2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/card_view_background"
                    android:foreground="?attr/selectableItemBackground">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="清空图片缓存"
                        android:textColor="@color/font_normal"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg" />


                <RelativeLayout
                    android:id="@+id/layout_about_app5"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/card_view_background"
                    android:foreground="?attr/selectableItemBackground">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="清空搜索记录"
                        android:textColor="@color/font_normal"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg" />

                <RelativeLayout
                    android:id="@+id/layout_about_app6"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/card_view_background"
                    android:foreground="?attr/selectableItemBackground">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="恢复初始设置"
                        android:textColor="@color/font_normal"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg" />

                <RelativeLayout
                    android:id="@+id/layout_about_app7"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/card_view_background"
                    android:foreground="?attr/selectableItemBackground">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="反馈"
                        android:textColor="@color/font_normal"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg" />

                <RelativeLayout
                    android:id="@+id/layout_about_app8"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/card_view_background"
                    android:foreground="?attr/selectableItemBackground">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:text="帮助"
                        android:textColor="@color/font_normal"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/layout_update"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:background="@color/card_view_background"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    android:text="版本更新"
                    android:textColor="@color/font_normal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/app_version_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="20dp"
                    android:text="V1.0"
                    android:textColor="@color/black_alpha_45"
                    android:textSize="16sp" />

            </RelativeLayout>


            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/corner_btn"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </com.atguigu.biliapk.view.SpringScrollView>

</LinearLayout>