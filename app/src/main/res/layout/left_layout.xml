<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_left"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#EE6363"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:src="@drawable/bili_default_avatar" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv"
                android:layout_marginLeft="30dp"
                android:text="点击头像登录"
                android:textColor="#88ffffff"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_switch_night" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:text="首页" />

        <TextView
            android:id="@+id/tv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_nav_vip"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:text="我的大会员" />

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_nav_point"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:text="会员积分" />

        <TextView
            android:id="@+id/tv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_file_download_black_24dp"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:text="离线缓存" />

        <View
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#66000000" />

        <TextView
            android:id="@+id/tv_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_view_later_24dp"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:text="稍后再看" />

        <TextView
            android:id="@+id/tv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_star_black_24dp"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:text="我的收藏" />

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_history_black_24dp"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:text="历史纪录" />

        <TextView
            android:id="@+id/tv_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_people_black_24dp"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:text="我的关注" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_account_balance_wallet_black_24dp"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:text="B币钱包" />

        <View
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#66000000" />

        <TextView
            android:id="@+id/tv_lens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/ic_color_lens_black_24dp"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:text="主题选择" />

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_settings_black_24dp"
            android:drawablePadding="40dp"
            android:gravity="center_vertical"
            android:text="设置与帮助" />


    </LinearLayout>
</ScrollView>